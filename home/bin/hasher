#!/bin/bash

domain=$1
col=${2:-32}
password=$HASHER_PASSWORD

if [ -z $password ]; then
    read -s -p 'ðŸ”‘ ' password
fi

t=`echo "${password}__${domain}" | shasum -a 256 | base64 | head -1 | cut -c1-${col}`

echo `echo $t | cut -c1-8`...

if [ `uname` == 'Linux' ]; then
    echo $t | wl-copy
else
    echo $t | pbcopy
fi
