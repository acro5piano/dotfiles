# mode: ruby

browsers = [
  'brave-browser',
  'chromium',
  'chromium-browser',
  'feh',
  'google-chrome',
  'google-chrome-beta',
  'google-chrome-dev',
  'google-chrome-stable',
  'konqueror',
  'vivaldi-stable',
  /crx_/,
]

# Firefox nore more work
window class_only: browsers do
  remap 'C-b', to: 'Left'
  remap 'C-f', to: 'Right'
  remap 'C-p', to: 'Up'
  remap 'C-n', to: 'Down'

  remap 'C-a', to: 'Home'
  remap 'C-e', to: 'End'
  remap 'C-M-a', to: 'Ctrl-Home'
  remap 'C-M-e', to: 'Ctrl-End'

  remap 'C-h', to: 'BackSpace'
  remap 'C-d', to: 'Delete'
  remap 'M-d', to: 'Ctrl-Delete'
  remap 'C-M-h', to: 'Ctrl-BackSpace'
  remap 'C-y', to: 'Ctrl-v'

  remap 'M-b', to: 'Ctrl-Left'
  remap 'M-f', to: 'Ctrl-Right'

  remap 'C-k', to: ['Shift-End', 'Ctrl-x']

  remap 'C-s', to: 'Ctrl-f'
  # remap 'C-r', to: 'Ctrl-Shift-g'

  # Alternatives
  remap 'C-M-d', to: 'Ctrl-d'
  remap 'C-M-s', to: 'Ctrl-f'
  remap 'C-M-b', to: 'Ctrl-b'
  remap 'M-e', to: 'Ctrl-e'
  remap 'M-s', to: 'Ctrl-s'
  remap 'M-n', to: 'Ctrl-Tab'
  remap 'M-p', to: 'Ctrl-Shift-Tab'
  remap 'M-a', to: 'Ctrl-a'
  remap 'M-r', to: 'Ctrl-r'
  # remap 'C-M-p', to: 'M-p' # Used in picture in picture extension
  remap 'C-M-p', to: 'Ctrl-p'

  # OSX-like
  remap 'M-c', to: 'Ctrl-c'
  remap 'M-x', to: 'Ctrl-x'
  remap 'M-v', to: 'Ctrl-v'
  remap 'M-z', to: 'Ctrl-z'
  remap 'M-k', to: 'Ctrl-k'
  remap 'M-h', to: 'Ctrl-h'
  remap 'M-w', to: 'Ctrl-w'
  remap 'M-l', to: 'Ctrl-l'
  remap 'M-t', to: 'Ctrl-t'

  remap 'M-minus', to: 'Ctrl-minus'
  remap 'M-equal', to: 'Ctrl-equal'
end
