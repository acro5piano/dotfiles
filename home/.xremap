# mode: ruby

targets = [
  # 'chromium-browser',
  'chromium',
  # 'google-chrome',
  'google-chrome-beta',
  # 'google-chrome-stable',
  # 'google-chrome-dev',
  'vivaldi-stable',
  'konqueror',
  'brave-browser',
  /crx_/,
]

# Firefox nore more work
window class_only: targets do
  remap 'C-b', to: 'Left'
  remap 'C-f', to: 'Right'
  remap 'C-p', to: 'Up'
  remap 'C-n', to: 'Down'

  remap 'C-a', to: 'Home'
  remap 'C-e', to: 'End'
  remap 'C-M-a', to: 'Ctrl-Home'
  remap 'C-M-e', to: 'Ctrl-End'

  remap 'C-h', to: 'BackSpace'
  remap 'C-d', to: 'Delete'
  remap 'M-d', to: 'Ctrl-Delete'
  remap 'C-M-h', to: 'Ctrl-BackSpace'
  remap 'C-y', to: 'Ctrl-v'

  remap 'M-b', to: 'Ctrl-Left'
  remap 'M-f', to: 'Ctrl-Right'

  remap 'C-k', to: ['Shift-End', 'Ctrl-x']

  remap 'C-s', to: 'Ctrl-g'
  # remap 'C-r', to: 'Ctrl-Shift-g'

  # Alternative
  remap 'C-M-d', to: 'Ctrl-d'
  remap 'C-M-s', to: 'Ctrl-f'
  remap 'C-M-b', to: 'Ctrl-b'
  remap 'M-s', to: 'Ctrl-s'
  remap 'M-n', to: 'Ctrl-n'
  remap 'M-a', to: 'Ctrl-a'
  remap 'M-r', to: 'Ctrl-r'
  remap 'M-p', to: 'Ctrl-p'
  remap 'C-M-p', to: 'M-p' # Used in picture in picture extension
  remap 'M-c', to: 'Ctrl-c'
  remap 'M-v', to: 'Ctrl-v'
  remap 'M-k', to: 'Ctrl-k'
  remap 'M-h', to: 'Ctrl-h'

  # OSX Like - not working with Slack
  # remap 'M-Up', to: 'Ctrl-Home'
  # remap 'M-Down', to: 'Ctrl-End'

  # Slack
  remap 'M-x', to: 'Ctrl-k'
end
