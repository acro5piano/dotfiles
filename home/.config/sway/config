# vim:set ft=conf

include ./default_config

set $mod Mod4

hide_edge_borders smart

input type:touchpad {
  tap enabled
  natural_scroll enabled
  dwt enabled
}

input type:keyboard {
  xkb_options ctrl:nocaps
  repeat_delay 200
  repeat_rate 50
}

bindsym $mod+Ctrl+s exec systemctl suspend
bindsym $mod+p exec clipman pick -t bemenu

# on ThinkPad Trackpoint, PrtSc is easy to mistype
bindsym $mod+Print exec grim -g "$(slurp)" -| wl-copy

exec start-fcitx &
exec xremap ~/.xremap &
exec wl-paste -t text --watch clipman store --max-items=50 --no-persist &

# exec swaymsg 'workspace 2; exec firefox-developer-edition'
exec swaymsg 'workspace 7; exec pavucontrol-qt'
exec swaymsg 'workspace 2; exec brave'
exec swaymsg 'workspace 1; exec kitty'

output '*' bg ~/.dotfiles/wallpapers/autumn-load.jpg stretch

bindsym $mod+d exec bemenu-run

bindsym $mod+Shift+p exec grim -g $(slurp -p) -t ppm - | convert - -format '%[pixel:p{0,0}]' txt:- | tail -n 1 | cut -d ' ' -f 4 | tee /tmp/color | wl-copy
