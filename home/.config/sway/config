# vim:set ft=conf

include ./default_config

set $mod Mod4

hide_edge_borders smart

input type:touchpad {
  tap enabled
  natural_scroll enabled
  dwt enabled
}

input type:keyboard {
  xkb_options ctrl:nocaps
  repeat_delay 200
  repeat_rate 40
}

bindsym $mod+Ctrl+s exec systemctl suspend
bindsym $mod+p exec clipman pick -t bemenu
bindsym Print exec grim -g "$(slurp)" -| wl-copy

exec start-fcitx &
# exec xremap ~/.xremap 2>&1 > /tmp/xremap.log &
exec wl-paste -t text --watch clipman store --max-items=50 --no-persist &

exec swaymsg 'workspace 2; exec brave --enable-features=UseOzonePlatform --ozone-platform=wayland'
exec swaymsg 'workspace 1; exec kitty'

output '*' bg ~/.dotfiles/wallpapers/autumn-load.jpg stretch

bindsym $mod+d exec bemenu-run
