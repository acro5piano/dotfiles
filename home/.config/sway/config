# vim:set ft=conf

set $mod Mod4
set $term kitty

hide_edge_borders smart
output '*' bg ~/.dotfiles/wallpapers/autumn-load.jpg stretch

font pango:monospace 0
titlebar_padding 1
titlebar_border_thickness 0

bar {
    position top
    font pango:Source Code Pro 10
    status_command i3status-rs
    colors {
        background #0f172a
    }
}

input type:touchpad {
  tap enabled
  natural_scroll enabled
  dwt enabled
}

input type:pointer {
  natural_scroll enabled
}

input type:keyboard {
  xkb_options ctrl:nocaps
  repeat_delay 300
  repeat_rate 60
}

bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86MonBrightnessUp exec --no-startup-id light -A 6
bindsym XF86MonBrightnessDown exec --no-startup-id light -U 6

bindsym $mod+Shift+q kill
bindsym $mod+Shift+c reload
bindsym $mod+o focus right
bindsym $mod+Return exec $term
bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'
bindsym $mod+Ctrl+s exec systemctl suspend
bindsym $mod+y exec clipman pick -t rofi
bindsym $mod+z fullscreen
bindsym $mod+r mode "resize"
bindsym $mod+x exec rofi -show drun
bindsym Print exec grim -g "$(slurp)" -| wl-copy
bindsym $mod+Shift+p exec grim -g $(slurp -p) -t ppm - | convert - -format '%[pixel:p{0,0}]' txt:- | tail -n 1 | cut -d ' ' -f 4 | tee /tmp/color | wl-copy

mode "resize" {
    bindsym j resize shrink width 30px
    bindsym k resize grow width 30px
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+a workspace number 1
bindsym $mod+s workspace number 2
bindsym $mod+d workspace number 3
bindsym $mod+f workspace number 4
bindsym $mod+g workspace number 5
bindsym $mod+h workspace number 6
bindsym $mod+j workspace number 7
bindsym $mod+k workspace number 8
bindsym $mod+l workspace number 9

bindsym $mod+Shift+a move container to workspace number 1
bindsym $mod+Shift+s move container to workspace number 2
bindsym $mod+Shift+d move container to workspace number 3
bindsym $mod+Shift+f move container to workspace number 4
bindsym $mod+Shift+g move container to workspace number 5
bindsym $mod+Shift+h move container to workspace number 6
bindsym $mod+Shift+j move container to workspace number 7
bindsym $mod+Shift+k move container to workspace number 8
bindsym $mod+Shift+l move container to workspace number 9

exec start-fcitx &
exec xremap ~/.xremap &
exec wl-paste -t text --watch clipman store --max-items=50 --no-persist &
exec swaymsg 'workspace 5; exec pavucontrol-qt'
exec swaymsg 'workspace 8; exec brave'
exec swaymsg 'workspace 7; exec kitty'

include /etc/sway/config.d/*
