# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4

font pango:Source Code Pro 9

default_border pixel 1
default_floating_border pixel 1

set $refresh_i3status killall -SIGUSR1 i3status-rs

bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86MonBrightnessUp exec --no-startup-id light -A 1
bindsym XF86MonBrightnessDown exec --no-startup-id light -U 1

# bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+Return exec kitty
bindsym $mod+Shift+q kill
bindsym $mod+d exec --no-startup-id rofi -show drun
bindsym $mod+Tab exec --no-startup-id rofi -show window

# change focus
# bindsym $mod+h focus left
# bindsym $mod+l focus right
bindsym $mod+b focus right

# change focus
bindsym $mod+a exec xdotool click 1
bindsym $mod+h exec xdotool click 6
bindsym $mod+j exec xdotool click 5
bindsym $mod+k exec xdotool click 4
bindsym $mod+l exec xdotool click 7

# split in vertical/horizonatal orientation (hard to use)
# bindsym $mod+Shift+v split v
# bindsym $mod+Shift+h split h

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle
# Same as tmux
bindsym $mod+z fullscreen toggle

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Alternative (It's not working!)
# bindsym $mod+j workspace number $ws1
# bindsym $mod+k workspace number $ws2
# bindsym $mod+l workspace number $ws3

bindsym $mod+n workspace next_on_output
bindsym $mod+p workspace prev_on_output
bindsym $mod+comma workspace number $ws7

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# reload the configuration file
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        # bindsym Left resize shrink width 10 px or 10 ppt
        # bindsym Down resize grow height 10 px or 10 ppt
        # bindsym Up resize shrink height 10 px or 10 ppt
        # bindsym Right resize grow width 10 px or 10 ppt

        bindsym Up resize grow width 5 px or 5 ppt
        bindsym Down resize shrink width 5 px or 5 ppt

        # back to normal
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

bar {
    position top
    font pango:Source Code Pro 10
    status_command i3status-rs
    colors {
        separator #666666
        background #0f172a
        statusline #dddddd
        focused_workspace #0088CC #0088CC #ffffff
        active_workspace #333333 #333333 #ffffff
        inactive_workspace #333333 #333333 #888888
        urgent_workspace #2f343a #900000 #ffffff
    }
}

hide_edge_borders smart

bindsym $mod+Print exec screenshot-clip
bindsym $mod+semicolon exec CM_LAUNCHER=rofi CM_HISTLENGTH=24 clipmenu -i
bindsym $mod+Ctrl+s exec sleep 1 && systemctl suspend
bindsym $mod+Up exec xrandr --output eDP-1 --rotate normal
bindsym $mod+Left exec xrandr --output eDP-1 --rotate left
bindsym $mod+Right exec xrandr --output eDP-1 --rotate right
# bindsym $mod+i exec pactl set-source-port 48 analog-input-headset-mic

for_window [class="brave-browser"] move container to workspace 2
for_window [class="pcmanfm"] move container to workspace 2
for_window [class="Pcmanfm"] move container to workspace 2
for_window [class="TigerVNC"] move container to workspace 3

exec --no-startup-id brave
exec i3-msg 'exec kitty'

assign [class="Brave"] $ws2
