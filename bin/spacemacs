#!/bin/bash

CONTAINER_USER=arch
CONTAINER_HOME=/home/$CONTAINER_USER

xhost +local:

sudo systemd-nspawn \
     --setenv=DISPLAY=$DISPLAY \
     --setenv=SHELL=/bin/bash \
     --bind=$HOME/.dotfiles/etc/arch-spacemacs:$CONTAINER_HOME \
     --bind=$HOME:$CONTAINER_HOME/host_home \
     --bind=/tmp/.X11-unix \
     -D ~/var/container/arch \
     -u $CONTAINER_USER \
     emacs
