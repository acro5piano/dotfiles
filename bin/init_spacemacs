#!/bin/bash
# This script is for install emacs-mozc to arch

UID=1000

cat << 'EOF' >> /etc/pacman.conf
[pnsft-pur]
SigLevel = Optional TrustAll
Server = http://downloads.sourceforge.net/project/pnsft-aur/pur/$arch
EOF
pacman -Syy
pacman -S git emacs emacs-mozc
useradd -u $UID arch
mkdir /home/arch


