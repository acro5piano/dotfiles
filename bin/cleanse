#!/bin/bash
# example:
#    echo '(株)アアaaＡ' | cleanse
#    => アアAAA

cat < /dev/stdin |
    sed -s 's/(.*)//g' |
    sed -s 's/（.*）//g' |
    sed -s 's/<.*>//g' |
    sed -s 's/＜.*＞//g' |
    sed -s 's/\[.*\]//g' |
    sed -s 's/【.*】//g' |
    sed -s 's/株式会社//g' |
    sed -s 's/※.*$//g' |
    grep -v ダミー |
    han | nkf -w |
    tr "[:upper:]" "[:lower:]"
