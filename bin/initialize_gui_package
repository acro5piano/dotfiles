#!/bin/bash

# GUI tools install script

# Language & input
sudo apt-get install -y fonts-takao fcitx fcitx-mozc language-pack-ja im-config fonts-wqy-zenhei
im-config -n fcitx

# Terminal
sudo apt-get install -y terminator

# Browser
sudo apt-get install chromium-browser

# Maintenance
sudo apt-get install -y gparted

# UX utilities
sudo apt-get install -y touchegg xsel

# Multimedia
sudo apt-get install -y vlc ubuntu-restricted-extras eog pinta

