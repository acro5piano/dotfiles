#!/bin/bash

# GUI tools install script

# Move to home directory
cd ~

# General update
sudo apt-get -y update
sudo apt-get -y upgrade

# Basic
sudo apt-get install -y openbox

# Language & input
sudo apt-get install -y fonts-takao fcitx fcitx-mozc mozc-utils-gui language-pack-ja fonts-wqy-zenhei

# Terminal
sudo apt-get install -y terminator

# Browser
sudo apt-get install chromium-browser

# Maintenance
sudo apt-get install -y gparted

# UX utilities
sudo apt-get install -y touchegg xsel xfce4-screenshooter

# Multimedia
sudo apt-get install -y vlc ubuntu-restricted-extras feh pinta moc

