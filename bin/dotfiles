#!/bin/bash

DOTPATH="$HOME/.dotfiles"

pull(){
    git pull origin master
    link
}

link(){
    for f in .??*
    do
        [ "$f" = ".git" ] && continue

        if [ -e "$HOME/$f" ]; then
            mv "$HOME/$f" `mktemp -d`
        fi

        ln -snvf "$DOTPATH/$f" "$HOME/$f"
    done

    ln -snfv "$DOTPATH/bin" "$HOME/bin"
    ln -snfv "$DOTPATH/prettier.config.js" "$HOME/prettier.config.js"
}

usage(){
    echo 'dot: sync and manage dot files'
    echo ''
    echo 'commands:'
    echo '    pull - fetch + link'
    echo '    link - create symlink'
    echo '    cd   - change directory to dot path'
    echo ''
    exit 1
}

change_dir() {
    cd $DOTPATH
    echo "cd to $DOTPATH"
}

case $1 in
    'pull') pull ;;
    'link') link ;;
    'cd') change_dir ;;
    '') change_dir ;;
    *) usage ;;
esac
