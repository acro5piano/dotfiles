#!/bin/bash

set -ue

DOTPATH="$HOME/.dotfiles"

FILES=(\
    .asoundrc \
    .bash_profile \
    bin \
    .config \
    .ctags \
    .editorconfig \
    .gemrc \
    .gitconfig \
    prettier.config.js \
    .tmux.conf \
    .vim \
    .vimrc \
    .xinitrc \
    .xinputrc \
    .xmodmap \
    .xremap \
    .Xresources \
)

for f in ${FILES[@]}; do
    if [ -e "$HOME/$f" ]; then
        mv -v "$HOME/$f" `mktemp -d`
    fi

    ln -snvf "$DOTPATH/$f" "$HOME/$f"
done
