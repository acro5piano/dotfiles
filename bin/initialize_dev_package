#!/bin/bash

# Move to home directory
cd ~

# General update
sudo apt-get -y update
sudo apt-get -y upgrade

# Remove unnecessary items
sudo apt-get remove --purge -y netsurf*
rm -rf ~/.netsurf

# Language and inputs
sudo apt-get install -y emacs-mozc mozc-utils-gui

# Development tools
sudo apt-get install -y vim net-tools bc gcc g++ make git screen tmux ssh emacs tree colordiff curl jq
sudo apt-get install -y software-properties-common python-software-properties
sudo apt-get install -y man

# Emacs cask
curl -fsSL https://raw.githubusercontent.com/cask/cask/master/go | python

# vim vundle
~/.dotfiles/bin/install_vundle

# Install nodejs
sudo apt-get install -y build-essential
https://nodejs.org/dist/v4.4.5/node-v4.4.5.tar.gz
tar xvf node-v4.4.5-linux-x64.tar.xz && rm node-v4.4.5-linux-x64.tar.xz
sudo cp node-v4.4.5-linux-x64/bin/* ~/bin

# For ruby installation
sudo apt-get install -y libreadline-dev libssl-dev libsqlite3-dev zlib1g-dev libyaml-dev libssl-dev libsqlite3-dev
sudo apt-get install -y sqlite3 libsqlite3-dev
sudo apt-get install -y imagemagick # MiniMagick RMagick
sudo apt-get install -y libxslt-dev libxml2-dev # Nokogiri
sudo apt-get install -y git-core libreadline6 libreadline6-dev libmysqlclient-dev libffi-dev

# Install ruby using rbenv + Ruby-build
if [ `which ruby | wc -l` -eq 0 ]; then
    git clone https://github.com/sstephenson/rbenv.git ~/.rbenv
    git clone https://github.com/sstephenson/ruby-build.git ~/.rbenv/plugins/ruby-build
    rbenv install -v 2.2.0
    rbenv rehash
    rbenv global 2.2.0
fi

# For python
sudo apt-get install -y python-dev python-pip python3 python3-pip gfortran liblapack-dev libpng12-dev libfreetype6-dev
pip install virtualenv
pip install jupyter

# For android
sudo apt-get install -y lib32z1 lib32ncurses5 lib32bz2-1.0 lib32stdc++6

# For Elasticsearch
sudo apt-get install -y openjdk-7-jdk

# Script for easily accessing gitignore boilerplates
sudo wget https://raw.githubusercontent.com/simonwhitaker/gibo/master/gibo -O /usr/bin/gibo

# Install golang 1.6
sudo wget https://storage.googleapis.com/golang/go1.6.linux-amd64.tar.gz
tar xzvf go1.6.linux-amd64.tar.gz && rm -rf go1.6.linux-amd64.tar.gz
sudo mv go /usr/local

# Install peco
wget https://github.com/peco/peco/releases/download/v0.3.6/peco_linux_amd64.tar.gz
tar xzvf peco_linux_amd64.tar.gz && rm peco_linux_amd64.tar.gz
cp peco_linux_amd64/peco ~/bin

