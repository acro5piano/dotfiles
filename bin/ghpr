#!/bin/bash

branch=$1
message=$2
body=$3

url=""

if [ -z "$message" ]; then
    message=`git log -1 --pretty=%B | head -1`
fi

if [ -z "$branch" ]; then
    url=`hub pull-request -m "$message"`
else
    if [ "$branch" == 'd' ]; then
        branch=develop
    fi
    if [ "$branch" == 'm' ]; then
        branch=master
    fi
    url=`gh pr create -H "$branch" -t "$message" -b "$body' | tail -1`

fi

if [ `uname` == 'Linux' ]; then
    xdg-open $url
else
    open $url
fi
